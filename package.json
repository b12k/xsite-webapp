  "scripts": {
    "dev": "run-s _clean _dev",
    "qc": "run-p tsc lint build",
    "tsc": "vue-tsc --noEmit",
    "lint": "run-p _lint:*",
    "prettify": "prettier . --ignore-path .gitignore",
    "build": "run-s _clean _build",
    "build:docker:amd": "env-cmd -i pnpm _build:docker:base --cache-from={{DOCKER_IMAGE}}-amd64-latest -t {{DOCKER_IMAGE}}-amd64-latest",
    "build:docker:arm": "run-s _build:docker:arm:*",
    "build:stats": "cross-env WITH_STATS=true pnpm build",
    "start": "node dist",
    "start:local": "nodemon --watch src --watch .env --ext * --exec \"pnpm build && cross-env NODE_ENV=production env-cmd --no-override node ./dist\"",
    "‚öôÔ∏è": "######################## TECHNICAL SCRIPTS ########################",
    "prepare": "run-p _prepare:*",
    "_build:docker:base": "cross-env DOCKER_BUILDKIT=1 docker buildx build . --build-arg BUILDKIT_INLINE_CACHE=1 --push",
    "_build:docker:arm:build": "env-cmd -i pnpm _build:docker:base --cache-from={{DOCKER_IMAGE}}-arm64-latest -t {{DOCKER_IMAGE}}-arm64-latest --platform linux/arm64",
    "_build:docker:arm:deploy": "env-cmd -i curl -X POST {{PORTAINER_WEBHOOK}}",
    "_prepare:env": "shx cp -u .env.example .env",
    "_prepare:husky": "husky install",
    "_dev": "run-p _dev:*",
    "_dev:client": "run-p _dev:client:*",
    "_dev:client:browser": "env-cmd webpack-dev-server -c webpack/config.browser.ts",
    "_dev:client:server": "env-cmd webpack -c webpack/config.server.ts",
    "_dev:server": "run-s _dev:server:wait _dev:server:run",
    "_dev:server:wait": "env-cmd -i wait-on http://localhost:{{WDS_PORT}}/public/manifest.json",
    "_dev:server:run": "nodemon",
    "_dev:public": "pnpm _build:public --watch",
    "__dev:docker-compose": "docker compose up -d",
    "_lint:stylelint": "stylelint \"**/*.{css,scss,vue}\" --ignore-path .gitignore",
    "_lint:eslint": "eslint . --ignore-path .gitignore",
    "_clean": "rm -rf dist",
    "_build": "run-p _build:*",
    "_build:client": "run-p _build:client:*",
    "_build:client:ssr": "webpack -c webpack/config.server.ts",
    "_build:client:browser": "webpack -c webpack/config.browser.ts",
    "_build:server": "run-p _build:server:*",
    "_build:server:src": "swc ./src/server -d ./dist --copy-files --strip-leading-paths --config-file server.swcrc",
    "_build:server:entry": "swc ./src/index.ts -o ./dist/index.js --strip-leading-paths --config-file server.swcrc",
    "_build:public": "swc ./src/public -d ./dist --copy-files --strip-leading-paths --config-file public.swcrc",
    "ü™ù": "############################ GIT HOOKS ############################",
    "_git:commit-msg": "commitlint",
    "_git:pre-commit": "run-p _git:pre-commit:*",
    "_git:pre-commit:tsc": "pnpm tsc",
    "_git:pre-commit:lint-staged": "lint-staged",
    "_git:pre-push": "branch-name-lint"
  },
